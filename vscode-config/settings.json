{
    "debug.console.fontSize": 15,
    "workbench.preferredDarkColorTheme": "Base16 Monokai",
    "workbench.preferredHighContrastColorTheme": "Base16 Solarized Dark",
    "editor.minimap.enabled": true,
    "explorer.autoReveal": false,
    "workbench.activityBar.visible": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.preferredLightColorTheme": "Base16 Summerfruit Dark",
    "workbench.tree.renderIndentGuides": "always",
    "editor.fontFamily": "\"Fira Code Retina\"",
    "editor.fontWeight": "100",
    "editor.wordWrapColumn": 120,
    "terminal.integrated.fontFamily": "\"Fira Code Retina\"",
    "terminal.integrated.fontWeightBold": "normal",
    "debug.console.lineHeight": 22,
    "markdown.preview.lineHeight": 1,
    "editor.lineHeight": 22,
    "editor.suggestLineHeight": 22,

    "vim.commandLineModeKeyBindings": [],
    "vim.textwidth": 120,
    "vim.visualModeKeyBindings": [],
    "vim.commandLineModeKeyBindingsNonRecursive": [],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-x>": false,
        "<C-c>": false,
        "<C-w>": false,
        "<C-h>": false,
        "<C-i>": false
    },
    "vim.statusBarColors.visualblock": "",
    "terminal.integrated.lineHeight": 1.3,
    "files.associations": {
        "*.spec" : "python",
        "*.sh" : "bat"
    },
    "python.linting.pylintArgs": [
        "--disable=W, C",
        "--disable=import-error",
        "--disable=no-name-in-module",
        "--disable=undefined-variable",
        "--disable=c-extension-no-member",
        "--disable=useless-object-inheritance",
        "--disable=too-few-public-methods",
        "--disable=too-many-arguments",
        "--disable=unresolved-import",
        "--disable=literal-comparison"
    ],

    "python.linting.pylintCategorySeverity.warning": "Error",

    "files.eol": "\n",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "python.formatting.provider": "yapf",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "python.jediMemoryLimit": 2048,
    "editor.rulers": [
    
    ],
    // "editor.semanticTokenColorCustomizations": null,
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--follow-imports=silent",
        "--show-column-numbers",
        "--ignore-unresolved-import",
        "--disable=literal-comparison"
    ],
    "update.mode": "none",
    "extensions.autoCheckUpdates": false,
    "python.languageServer": "Microsoft",
    "python.pythonPath": "C:\\Python38\\python.exe",
    "window.zoomLevel": 0,
    "go.formatTool": "goimports",
    "editor.fontSize": 13.5,
    "terminal.integrated.copyOnSelection": true,
    "extensions.ignoreRecommendations": true,

    "C_Cpp.clang_format_style": "{ BasedOnStyle: WebKit, IndentWidth: 4, BreakBeforeBraces: Linux}",
    "debug.onTaskErrors": "showErrors",
    
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "files.exclude": {
        "*.metadata": true,
        "*.settings": true,
        "desktop.ini": true
    },

    "workbench.colorTheme": "Monokai Dimmed"
}

